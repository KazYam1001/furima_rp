.block.horizontal-padding-25
  .block__menu
    住所入力
.block.horizontal-padding-25
  = form_with model: @user, url: users_create_address_path, id: 'new_address', class: 'new_address', local: true do |f|
    .input-field
      .input-field-main
        = f.label :last_name, "お名前（全角）"
        %span.required-true
          必須
        .input-field-multiple
          = f.text_field :last_name, required: true, placeholder: "例）山田", value: '出品'
          = f.text_field :first_name, required: true, placeholder: "例）彩", value: '太郎'
    .input-field
      .input-field-main
        = f.label :last_name_reading, "お名前カナ（全角）"
        %span.required-true
          必須
        .input-field-multiple
          = f.text_field :last_name_reading, required: true, placeholder: "例）ヤマダ", value: 'シュッピン'
          = f.text_field :first_name_reading, required: true, placeholder: "例）アヤ", value: 'タロウ'
    = fields_for :address do |a|
      .input-field
        .input-field-main
          = a.label :postal_code, "郵便番号"
          %span.required-true
            必須
          %br
          = a.text_field :postal_code, required: true, placeholder: "例）123-4567", value: '123-4567'
      .input-field
        .input-field-main
          = a.label :prefecture_id, "都道府県"
          %span.required-true
            必須
          %br
          = a.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "---", selected: 1}, {required: true}
      .input-field
        .input-field-main
          = a.label :city, "市区町村"
          %span.required-true
            必須
          %br
          = a.text_field :city, required: true, placeholder: "例）横浜市緑区", value: 'city'
      .input-field
        .input-field-main
          = a.label :house_number, "番地"
          %span.required-true
            必須
          %br
          = a.text_field :house_number, required: true, placeholder: "例）青山1-1-1", value: 'block'
      .input-field
        .input-field-main
          = a.label :building_name, "建物名"
          %span.required-false
            任意
          %br
          = a.text_field :building_name, placeholder: "例）柳ビル103", value: 'building'
      .input-field
        .input-field-main
          = a.label :phone_number, "電話番号"
          %span.required-false
            任意
          %br
          = a.text_field :phone_number, placeholder: "例）09012345678", value: '09011112222'
    = f.submit "次へ進む", class:"button back-red font-white"
